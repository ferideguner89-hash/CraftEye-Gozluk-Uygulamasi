<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentlog1">

    <ImageView
        android:id="@+id/logo_background"
        android:layout_width="174dp"
        android:layout_height="154dp"
        android:layout_marginTop="48dp"

        android:src="@drawable/log9"
        android:scaleType="centerCrop"

        android:background="@drawable/logo_oval"
        android:clipToOutline="true"

        app:layout_constraintBottom_toTopOf="@+id/editUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_login"
        android:layout_width="238dp"
        android:layout_height="27dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="140dp"
        android:text="Hala Kayıt Olmadın mı? KAYIT OL"
        android:textColor="@color/colorTextPrimary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonlog1"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/editUser"
        android:layout_width="339dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="e-posta giriniz"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/editPass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_background"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="125dp"
        android:layout_height="26dp"
        android:layout_marginBottom="76dp"
        android:text="ŞİFREMİ UNUTTUM"
        app:layout_constraintBottom_toTopOf="@+id/text_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.587"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPass" />

    <EditText
        android:id="@+id/editPass"
        android:layout_width="344dp"
        android:layout_height="66dp"
        android:layout_marginBottom="96dp"
        android:ems="10"
        android:hint="şifre giriniz"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editUser"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/buttonlog1"
        android:layout_width="128dp"
        android:layout_height="51dp"
        android:layout_marginStart="4dp"
        android:text="giriş yap"
        app:layout_constraintBottom_toTopOf="@+id/text_login"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPass"
        app:layout_constraintVertical_bias="0.852" />
</androidx.constraintlayout.widget.ConstraintLayout>

